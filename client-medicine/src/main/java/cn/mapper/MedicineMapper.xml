<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mapper.MedicineMapper">
    <resultMap id="findMethodDetail" type="cn.entity.Medicine">
        <id property="id" column="id"></id>
        <result property="typeId" column="typeId"/>
        <result property="medicineNo" column="medicineNo"/>
        <result property="medicineName" column="medicineName"/>
        <result property="code" column="code"/>
        <result property="medicineSize" column="medicineSize"/>
        <result property="stock" column="stock"/>
        <result property="price" column="price"/>
        <result property="typeName" column="typeName"/>
        <result property="prescriptionId" column="prescriptionId"/>
        <collection property="method" select="findMethod" column="id"></collection>
    </resultMap>
    <select id="findPrescriptionType" resultType="cn.entity.PrescriptionType">
        select * from PrescriptionType
    </select>
    <select id="findMedicine" resultMap="findMethodDetail">
        SELECT m.*,ct.typeName as typeName from Medicine m,medicineType ct
        <where>
            and m.typeId=ct.id
            <if test="typeId!=null and typeId!='null'">
               and `typeId`=#{typeId}
            </if>
            <if test="code!=null and code!='null'">
                and (`code` like concat("%",#{code},"%") or `medicineName` like concat("%",#{code},"%"))
            </if>
        </where>
    </select>
    <select id="findMethod" resultType="cn.entity.Method">
 SELECT m.* FROM `medicine_method` mm,`method` m
        <where>
            and m.`id`=mm.methodId
            <if test="pid!=null and pid!='null'">
                AND mm.medicineId=#{id}
            </if>
        </where>
    </select>
    <select id="findMedicineByPid" resultMap="findMethodDetail">
        SELECT m.*,ct.typeName as typeName from Medicine m,medicineType ct
        <where>
        and m.typeId=ct.id
            <if test="pid!=null and pid!='null'">
                and m.prescriptionId=#{pid}
            </if>
        </where>
    </select>
    <select id="findMedicineType" resultType="cn.entity.MedicineType">
        select * from  MedicineType where
        <where>
            <if test="pid!=null and pid!='null'">
                and prescriptionTypeId=#{pid}
            </if>
        </where>
    </select>
    <insert id="addPreDetail">
        insert into prescriptiondetail (`id`,`prescriptId`,`medicineId`,`useSize`,`methodId`,`frequency`,`days`,`count`
)values(null,#{prescriptionDetail.prescriptId},#{prescriptionDetail.medicineId},#{prescriptionDetail.useSize},
#{prescriptionDetail.methodId},#{prescriptionDetail.frequency},#{prescriptionDetail.days},#{prescriptionDetail.count})
    </insert>
</mapper>